{
  "name": "simon-game-app",
  "version": "1.0.0",
  "description": "Multiplayer Simon Says game with real-time WebSocket communication",
  "main": "dist/backend/server.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "setup": "bash setup.sh",
    "go": "bash setup.sh",
    "publish": "bash publish.sh",
    "test": "npm run test:install && vitest",
    "test:install": "npm install --no-save vitest @vitest/coverage-v8 @vitest/ui jsdom @testing-library/jest-dom @testing-library/react @testing-library/user-event supertest @types/supertest react react-dom @types/react @types/react-dom @vitejs/plugin-react",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "build": "tsc && tsc-alias",
    "build:backend": "tsc -p tsconfig.backend.json",
    "dev": "concurrently --names \"backend,frontend\" --prefix-colors \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "tsx watch src/backend/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:ts": "tsc --watch",
    "start": "node dist/backend/server.js",
    "start:prod": "NODE_ENV=production node dist/backend/server.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "simon-says",
    "multiplayer",
    "game",
    "websocket",
    "real-time"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "9.1.0",
    "tsx": "4.19.2"
  },
  "dependencies": {
    "@types/cookie": "0.6.0",
    "@types/cookie-parser": "1.4.7",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/jsonwebtoken": "9.0.7",
    "@types/node": "22.9.0",
    "@types/uuid": "10.0.0",
    "cookie": "0.7.2",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "express": "4.21.1",
    "jsonwebtoken": "9.0.2",
    "socket.io": "4.8.1",
    "tsc-alias": "1.8.10",
    "typescript": "5.6.3",
    "uuid": "10.0.0",
    "zod": "3.23.8"
  }
}
